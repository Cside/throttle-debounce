{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "rootDir": "src",
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist/cjs"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
