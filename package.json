{
  "name": "throttle-debounce",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "build": "printf 'cjs\\nesm\\n' | xargs -P 2 -L 1 -I{} yarn run build:{}",
    "build:cjs": "tsc                      && yarn run babel:cjs",
    "build:esm": "tsc -p tsconfig.esm.json && yarn run babel:esm",
    "watch": "printf 'cjs\\nesm\\n' | xargs -P 2 -L 1 -I{} yarn run watch:{}",
    "watch:cjs": "tsc-watch                      --onSuccess 'yarn run babel:cjs'",
    "watch:esm": "tsc-watch -p tsconfig.esm.json --onSuccess 'yarn run babel:esm'",
    "babel:cjs": "babel dist/cjs --out-dir dist/cjs --source-maps",
    "babel:esm": "babel dist/esm --out-dir dist/esm --source-maps --config-file ./.babelrc.esm.js",
    "clean": "rm -rf ./dist/cjs ./dist/esm",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "eslint --fix 'src/**/*.ts'",
    "prettier": "prettier --write . '!dist/**/*.ts'",
    "lint": "yarn run eslint:fix && yarn run prettier"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "babel-loader": "^9.0.0",
    "core-js": "3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.0",
    "jsdom": "^20.0.1",
    "lodash.throttle": "^4.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest"
      ]
    }
  },
  "dependencies": {
    "@babel/cli": "^7.19.3"
  }
}
